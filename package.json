{
  "name": "chirpin-hockey",
  "version": "0.2.0",
  "private": true,
  "type": "module",

  "scripts": {
    "dev": "vite --config vite.config.ts",

    "build": "npm run build:client && npm run build:functions",

    "build:client": "vite build --config vite.config.ts",
    "build:functions": "npm run tsc:server && npm run copy:functions",

    "tsc:server": "tsc -p server/tsconfig.json --outDir dist/functions",
    "copy:functions": "cp -R server/static/* dist/functions || true",

    "serve": "npx serve dist/public",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",

    "db:push": "drizzle-kit push"
  },

  "engines": {           // Netlify picks the closest available runtime
    "node": ">=18.0.0"
  },

  "dependencies": {
    "express": "^4.19.2",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "vite": "^5.2.0",
    "react-hook-form": "^7.50.1",
    "zod": "^3.23.8",
    "drizzle-orm": "^0.29.4",
    // …everything else from your current file…
    "pg": "^9.0.0"
  },

  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.21",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.2",
    "typescript": "^5.5.2",
    "tailwindcss": "^3.5.1",
    "postcss": "^8.4.34",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.4.0",
    "prettier": "^3.2.5",
    // …other dev deps unchanged…
    "esbuild": "^0.21.4"
  }
}
