{
  "name": "chirpin-hockey",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "vite --config vite.config.ts",
    "build": "npm run build:client && npm run build:functions",
    "build:client": "vite build --config vite.config.ts",
    "build:functions": "npm run tsc:server && npm run copy:functions",
    "tsc:server": "tsc -p server/tsconfig.json --outDir dist/functions",
    "copy:functions": "cp -R server/static/* dist/functions || true",
    "serve": "npx serve dist/public",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.50.1",
    "vite": "^5.1.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.21",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "drizzle-kit": "^0.20.7",
    "eslint": "^8.57.0",
    "esbuild": "^0.21.4",
    "postcss": "^8.4.34",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.4",
    "tailwindcss-animate": "^1.0.7",
    "@tailwindcss/typography": "^0.5.12"
    "typescript": "^5.3.3"
  }
}
